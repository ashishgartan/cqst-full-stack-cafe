<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/icons/favicon.png" />
        <script src="https://cdn.tailwindcss.com"></script>
        <title>Full Stack Café</title>
      </head>
<body>
    <%- include('./partials/header') %>

<div class="bg-gray-100 min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-black text-gray-800">Canteen Command Center</h1>
            <button onclick="toggleModal('product-modal')" class="bg-red-700 text-white px-6 py-2 rounded-xl font-bold hover:bg-red-800 transition">
                + Add New Product
            </button>
        </div>

        <div class="flex gap-4 mb-6">
            <button onclick="switchTab('orders')" class="tab-btn active bg-white px-6 py-2 rounded-t-xl font-bold focus:border-b-4 focus:border-red-700">Live Orders</button>
            <button onclick="switchTab('products')" class="tab-btn bg-gray-200 px-6 py-2 rounded-t-xl font-bold focus:border-b-4 focus:border-red-700">Manage Menu</button>
        </div>

        <div id="orders-section" class="tab-content">
            <div class="bg-white rounded-2xl shadow-sm overflow-hidden border border-gray-200">
                <table class="w-full text-left border-collapse">
                    <thead class="bg-gray-50 uppercase text-xs font-bold text-gray-500">
                        <tr>
                            <th class="p-4">Customer</th>
                            <th class="p-4">Items</th>
                            <th class="p-4">Total</th>
                            <th class="p-4">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr class="border-t border-gray-100">
                            <td class="p-4 font-medium"><%= order.user.username %><br><span class="text-xs text-gray-400"><%= order.user.phone %></span></td>
                            <td class="p-4">
                                <% order.items.forEach(item => { %>
                                    <span class="block text-sm"><%= item.productId.name %> (x<%= item.quantity %>)</span>
                                <% }) %>
                            </td>
                            <td class="p-4 font-bold text-red-700">₹<%= order.totalAmount %></td>
                            <td class="p-4">
                                <select onchange="updateStatus('<%= order._id %>', this.value)" class="bg-gray-100 rounded-lg p-1 text-sm font-bold">
                                    <option value="Pending" <%= order.status == 'Pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="Preparing" <%= order.status == 'Preparing' ? 'selected' : '' %>>Preparing</option>
                                    <option value="Ready" <%= order.status == 'Ready' ? 'selected' : '' %>>Ready</option>
                                    <option value="Delivered" <%= order.status == 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                </select>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="products-section" class="tab-content hidden grid grid-cols-1 md:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
            <div class="bg-white p-4 rounded-2xl shadow-sm border border-gray-200 flex items-center gap-4">
                <img src="/images/<%= product.image %>" class="w-16 h-16 rounded-xl object-cover">
                <div class="flex-1">
                    <h3 class="font-bold"><%= product.name %></h3>
                    <p class="text-red-700 font-black">₹<%= product.price %></p>
                </div>
                <div class="flex flex-col gap-2">
                    <button class="text-blue-600 hover:underline text-sm font-bold">Edit</button>
                    <button class="text-red-600 hover:underline text-sm font-bold">Delete</button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    function switchTab(tab) {
        document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
        document.getElementById(tab + '-section').classList.remove('hidden');
        
        // Update button styles...
    }

    async function updateStatus(id, status) {
        const res = await fetch('/admin/orders/update-status', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({orderId: id, status})
        });
        if(res.ok) showToast("Status updated to " + status);
    }
</script>
</body>
</html>