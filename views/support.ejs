      // Simple success message logic
      const form = document.getElementById("supportForm");
      form.onsubmit = async (e) => {
        // If you want to handle via AJAX (recommended)
        // e.preventDefault();
        // ... fetch logic ...
        // alert('Message sent!');
      };
    </script>
  </body>
</html>
